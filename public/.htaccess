<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si existe archivo o directorio, se sirve normal
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Si no existe, redirige todo a index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Opcional: servir correctamente archivos est√°ticos
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>
